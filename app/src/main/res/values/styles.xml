<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>


    <style name="AppTheme.Base" parent="ThemeOverlay.AppCompat.Light">

    </style>


    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary</item>
        <item name="colorAccent">@color/material_drawer_primary</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_window_background">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_icons">@color/material_drawer_icons</item>
        <item name="material_drawer_primary_text">@color/md_black_1000</item>
        <item name="material_drawer_primary_icon">@color/md_black_1000</item>
        <item name="material_drawer_secondary_text">@color/md_black_1000</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected_text</item>
        <item name="material_drawer_selected_text">@color/material_drawer_background</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>

    </style>

    <style name="ContentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_dark_background</item>
        <item name="colorAccent">@color/material_drawer_primary</item>
        <item name="android:windowBackground">@color/md_white_1000</item>

    </style>


    <style name="NightTheme" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary</item>
        <item name="colorAccent">@color/material_drawer_primary</item>
        <item name="android:windowBackground">@color/night</item>

    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary</item>
        <item name="colorAccent">@color/material_drawer_primary</item>
    </style>

    <style name="WelcomeTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

</resources>
